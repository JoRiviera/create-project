{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"],
		"no-empty": "warn",
		"no-cond-assign": ["error", "always"]
	},
	"plugins": ["@typescript-eslint"],
	"ignorePatterns": ["*.cjs"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2020
	},
	"env": {
		"es2017": true,
		"node": true
	}
}
